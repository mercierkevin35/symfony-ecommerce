{% extends 'base.html.twig' %}

{% block title %}Nos produits - {{ SHOP_NAME }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h2>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h3>Nos produits</h1>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item text-center">
                            <a href="{{ path('product', {'slug': product.slug}) }}">
                                <img 
                                    src="{{ asset('uploads/files/{filename}')|trans({'{filename}': product.illustration}) }}" 
                                    alt="{{ product.name }}"
                                    class="img-fluid">
                                <h5 class="product-title">{{ product.name }}</h4>
                                <h6 class="product-subtitle">{{ product.subtitle }}</h5>
                                <span class="product-price">{{ (product.price / 100)|number_format(2, ',', ' ') }}</span>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
