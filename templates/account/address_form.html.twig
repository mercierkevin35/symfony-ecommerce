{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse - {{ SHOP_NAME }}{% endblock %}

{% block content %}
    {% if app.request.get('_route') == "add_address" %}
        {% set submitLabel = "Ajouter" %}
        {% set pageTitle = "Ajouter une adresse" %}
    {% elseif app.request.get('_route') == "edit_address" %}
        {% set submitLabel = "Modifier" %}
        {% set pageTitle = "Modifier une adresse" %}
    {% else %}
        {% set submitLabel = null %}
        {% set pageTitle = "Title" %}
    {% endif %}
    
    <h1>{{ pageTitle}}</h1>
    <a href="{{ path('account_addresses') }}">Retour</a>
    <hr>
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.firstname) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastname) }}
            </div>
            <div class="col-12">
                {{ form_row(form.company) }}
            </div>
            <div class="col-12">
                {{ form_row(form.address) }}
            </div>
            <div class="col-12">
                {{ form_row(form.zipCode) }}
            </div>
            <div class="col-12">
                {{ form_row(form.city) }}
            </div>
            <div class="col-12">
                {{ form_row(form.country) }}
            </div>
            <div class="col-12">
                {{ form_row(form.phone) }}
            </div>
            <div class="col-12">
                
                {{ form_row(form.submit, {label: submitLabel}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}